<div class = "container">
  <div class ="row mt-3">
    <div class ="col text-center mx-auto">
      <%= form_with model: @admin, url: new_admin_session_path, local: true do |f| %>
        <div class="field"><h1><strong>管理者ログイン</strong></h1></div>
        <div class="field mt-4">
          <%= f.text_field :name, autofocus: true, placeholder:"管理者名" %>
        </div>
        <div class="field mt-4">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"管理者メールアドレス" %>
        </div>
        <div class="field mt-4">
          <%= f.password_field :password, autocomplete: "current-password", placeholder:"管理者パスワード" %>
        </div>
        <div class="actions mt-4">
          <%= f.submit "管理者ログイン", class:"btn btn-lg btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

