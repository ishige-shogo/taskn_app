
<div class = "container">

  <div class ="row">
    <div class ="col text-center mx-auto">
      <h1><strong><span class="text-light">お問い合わせ</span>詳細</strong></h1>
    </div>
  </div>

  <div class ="row mt-3">
    <div class ="col mx-auto">
      <table class="table table-bordered">
        <tr>
          <td class="bg-dark text-light font-weight-bold contact-content">お問い合わせID</td>
          <td class="bg-light"><%= @contact.id %></td>
        </tr>
        <tr>
          <td class="bg-dark text-light font-weight-bold contact-content">利用者名(ID)</td>
          <td class="bg-light"><%= @contact.user.name %> (<%= @contact.user_id %>)</td>
        </tr>
        <tr>
          <td class="bg-dark text-light font-weight-bold contact-content">送信時間</td>
          <td class="bg-light"><%= simple_date(@contact.created_at) %>&emsp;<%= simple_time(@contact.created_at) %></td>
        </tr>
        <tr>
          <td class="bg-dark text-light font-weight-bold contact-content">タイトル</td>
          <td class="bg-light"><%= @contact.title %></td>
        </tr>
        <tr>
          <td class="bg-dark text-light font-weight-bold contact-content">内容</td>
          <td class="bg-light"><%= @contact.body %></td>
        </tr>
      </table>
    </div>
  </div>

  <div class ="row mt-4">
    <div class ="col text-center mx-auto">
      <%= link_to "一覧画面に戻る", admins_contacts_path, class:"btn btn-light" %>
    </div>
  </div>

</div>



