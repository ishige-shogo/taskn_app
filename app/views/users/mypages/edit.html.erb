<h1>Users::Mypages#edit</h1>
<%= form_with model: @user, url: mypages_path, local:true do |f| %>
    <div class="field">
        <%= f.label :name %><br>
        <%= f.text_field :name %>
    </div>
    <div class="field">
        <%= f.label :email %><br>
        <%= f.email_field :email %>
    </div>
    <div class="field">
        <%= f.label :image %><br>
        <%= attachment_image_tag @user, :image, format: "jpeg", id: "img_prev", fallback: "no_image.jpg", size: "100x100" %><br>
        <%= f.attachment_field :image %>
    </div>
    <%= f.submit "変更を保存" %>
<% end %>

